{
  "name": "@maiia-microservices/mobile-store-reviews",
  "version": "0.2.0",
  "description": "BOT mobile par la team mobile (reviews Slack, modifs PO editor, etc...)",
  "scripts": {
    "dev": "yarn watch --ignoreDirectoryPattern=static",
    "build": "yarn build-ts && yarn lint",
    "build-ts": "yarn build:clean && tsc --declaration",
    "build:clean": "rimraf lib",
    "debug": "yarn build && yarn watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --ignore './static/' --inspect dist/server.js",
    "start": "yarn serve",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "watch-node": "nodemon --ignore './static/' dist/server.js",
    "watch-test": "yarn test -- --watchAll",
    "watch-ts": "tsc -w",
    "sonar": "node sonar-project.js",
    "start-prod": "nohup yarn watch-debug &"
  },
  "dependencies": {
    "@slack/webhook": "6.0.0",
    "app-store-scraper": "0.16.3",
    "compression": "1.7.4",
    "errorhandler": "1.5.1",
    "express": "4.17.1",
    "firebase-admin": "9.4.2",
    "google-play-scraper": "8.0.2",
    "json-concat": "0.0.1",
    "mv": "2.1.1",
    "node-cron": "2.0.3",
    "patch-package": "6.2.2",
    "postinstall-postinstall": "2.1.0",
    "recursive-diff": "1.0.8",
    "rimraf": "3.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.11",
    "@types/mv": "^2.1.0",
    "@types/node-cron": "^2.0.3",
    "@types/rimraf": "^3.0.0"
  }
}
